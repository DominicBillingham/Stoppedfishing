<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stoppedfishing</title>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cute+Font&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@700&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lisu+Bosa:wght@300&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />




</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 class">
            <div class="container">

                <a asp-area="" asp-page="/Index">Stopped Fishing!</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/home/index">Availability</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Meeting/Index">Meetings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="currentUser" href="/user/signin/2">Login!</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" data-bs-toggle="modal" data-bs-target="#LoginModal">Login</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-body">

                    <form method="post" asp-controller="User" asp-action="LogIn">

                        <input type="text" name="UserName" />
                        <input type="submit" />

                    </form>

                </div>

            </div>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            StoppedFishing is a small webapp designed to quickly find a time to hang with all your favourite friends! Please remember not to enter any sensitive information as the website is still in development.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/Enums.js" asp-append-version="true"></script>
    <script src="~/js/UserHandler.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>